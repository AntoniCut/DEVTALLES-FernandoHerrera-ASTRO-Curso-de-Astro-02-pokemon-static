---

interface Props {
    url: string;
    name: string;
    isBig?: boolean;
}

const { url, name, isBig = false } = Astro.props;

const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
//console.log(id);
---


<!-- *********************************************************************************** -->
<!-- **********  02-pokemon-static/src/components/pokemons/PokemonCard.astro  ********** -->
<!-- *********************************************************************************** -->


<!-- href={`/pokemon/${id}`} -->

<a
    href={`/pokemons/${name}`}

    class:list={[
        "rounded flex flex-col justify-center items-center p-1",
        {
            border: !isBig,
        },
    ]}
>
    <img
        src={imageSrc}
        alt={name}
        class:list={[
            {
                "w-26 h-26": isBig,
                "w-22 h-20": !isBig,
            },
        ]},
        transition:name={`${name}-image`}

    />

    <span
        class:list={[
            'capitalize',
            {
                'text-6xl text-green-500': isBig

            }
        ]}
    >
        {id} - {name}
    </span>

</a>

