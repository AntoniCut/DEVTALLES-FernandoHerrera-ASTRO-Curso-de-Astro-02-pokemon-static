---

//  -------------------------------------------------------
//  ----------  /02/pokemon-static/  ----------------------
//  ----------  /src/pages/pokemons/[page].astro  ---------
//  -------------------------------------------------------


import type { GetStaticPaths } from "astro";
import type { PokemonListResponse } from "@interfaces/pokemon-list.response";

import MainLayout from "@layouts/MainLayout.astro";
import PokemonCard from "@components/pokemons/PokemonCard.astro";
import Title from "@components/shared/Title.astro";


//  -----  title  -----
const title = "Pokemon Static | Home";


//  -----  getStaticPath  -----
export const getStaticPaths = ( async({paginate}) => {
    
    //  -----  Peticiones HTTP  -----
    const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
    const { results } = (await resp.json()) as PokemonListResponse;
    //console.log("data => ", data);

    return paginate(results, { pageSize: 20 });

}) satisfies GetStaticPaths;


const { page } = Astro.props;
//console.log(' { page } => ', page);


---


<MainLayout title={title}>
    
    <!-- <img class="logo-astro" src="/logo-astro.svg"> -->
    
    <Title>
        Listado Paginado
    </Title>

    <section
        aria-label="Listado de Pokémons"
        class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-10"
        
    >

        <!-- -----  Renderizamos todos los Pokemones  ----- -->
        {
            page.data.map(({ name, url }) => (
                <PokemonCard name={name} url={url} />
            ))
        }

    </section>


    <!-- -----  Botones, logo astro y número de página  ----- -->
    <section class="flex mt-10 ml-5 gap-2 items-center">

        <!-- { page.url.prev && <a class="btn" href={page.url.prev}> Anteriores </a> } -->
        
        <a 
            class:list= {[
                'btn', 
                {
                    disabled: !page.url.prev,
                }
            ]} 
            href={page.url.prev}
        > 
            Anteriores 
        </a>
        
        <a 
            class:list= {[
                'btn', 
                {
                    disabled: !page.url.next,
                }
            ]} 
            href={page.url.next}
        > 
            Siguientes 
        </a>

        <div class="flex flex-1"> </div>
        <img class="logo-astro" src="/logo-astro.svg">
        <span class="text-xl font-bold mr-5"> Página {page.currentPage} </span>

    </section>

</MainLayout>


<style>
    
    img {
        width: 50px;
        height: 50px;
        color: white;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .btn {
        @apply bg-blue-500 p-2 text-white rounded-md;
        @apply hover:bg-green-500;
    }

    .disabled {
        @apply bg-gray-600 text-gray-400 pointer-events-none;
    }

</style>
